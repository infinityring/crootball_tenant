---
import AppPreloader from "@/components/common/AppPreloader.astro";
import Fonts from "@/components/common/Fonts.astro";
import "@/styles/app.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Crootball</title>

        <script>
            import "@/scripts/app.js";
        </script>
        <script is:inline>
            localStorage.getItem("dark-mode") === "dark" &&
                document.documentElement.classList.add("dark");
        </script>

        <Fonts />
    </head>
    <body class="is-header-blur" @load.window="$store.global.hideLoader">
        <AppPreloader />
        <slot />
        <div id="x-teleport-target"></div>
        <script>
            window.addEventListener("DOMContentLoaded", () => Alpine.start());
        </script>
    </body>
</html>

