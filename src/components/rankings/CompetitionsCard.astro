---
import Kpi from "@/components/ui/Kpi.astro";

const KPIs = [
    { topvalue: "12th", label: "La Liga", link: "/competitions/la-liga" },
    {
        topvalue: "OUT",
        label: "Europa League",
        link: "/competitions/europa-league",
    },
    {
        topvalue: "QUARTERS",
        label: "Copa del Rey",
        link: "/competitions/copa-del-rey",
    },
    { topvalue: "34th", label: "Managers", link: "/rankings/managers" },
    { topvalue: "18th", label: "TeamValue", link: "/rankings/teamvalue" },
];
---

<div class="card">
    <div class="grid grid-cols-6 px-4 pb-4 sm:px-5 gap-1">
        {KPIs.map((kpi) => <Kpi kpi={kpi} />)}
    </div>
</div>
