---
import Chart from "../ui/alpine/Chart.astro";

const {chartId, playerId } = Astro.props;

const configuration = {
    series: [
      {
        name: "Player Stats",
        data: [80, 70, 40, 40, 83, 55],
      },
    ],
    chart: {
      type: "radar",

      toolbar: { show: false },
      dropShadow: {
        enabled: false, // more minimal look
      },
    },
    stroke: {
      width: 2,
      colors: ["#ff0000"], // red stroke like in the image
    },
    fill: {
      opacity: 0, // no fill, just outline
    },
    markers: {
      size: 0, // no dots
    },
    xaxis: {
      categories: ["SHO", "PAS", "STR", "DEF", "SPD", "DRI"],
      labels: {
        style: {
          fontWeight: 700,
          fontSize: "14px",
          colors: ["#000", "#000", "#000", "#000", "#000", "#000"], // bold black labels
        },
      },
    },
    yaxis: {
      show: false,
      max: 100,
    },
  };

---

<Chart chartId={chartId} configuration={configuration}></Chart>